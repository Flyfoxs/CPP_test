{
    // Use clangd for C/C++ language support
    "C_Cpp.intelliSenseEngine": "Disabled",
    "clangd.path": "clangd",
    "clangd.arguments": [
        "--background-index",
        "--clang-tidy",
        "--completion-style=detailed",
        "--header-insertion=iwyu"
    ],
    // Enable diagnostics
    "clangd.diagnostics": true,
    "clangd.checkUpdates": true,
    
    // Terminal scrollback buffer - set to maximum
    "terminal.integrated.scrollback": 999999
}
